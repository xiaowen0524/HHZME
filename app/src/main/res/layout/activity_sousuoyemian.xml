<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="hhzmy.bwei.com.hhzme.sousuoyemian.SousuoyemianActivity">

    <!--头部***选择指示-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="3dp">
        <!--返回-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="5dp">

            <ImageView
                android:id="@+id/ssFanhui"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/store_back" />
        </LinearLayout>
        <!--输入框-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#fff"
            android:padding="7dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#eeeeee"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <!--放大镜图标-->
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@mipmap/icon_search_home" />
                <!--输入框-->
                <EditText
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@null"
                    android:hint="好奇"
                    android:textColor="#666" />

                <!--语音图标-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="10dp">

                    <ImageView
                        android:id="@+id/yuyinImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:src="@mipmap/voice_icon_white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!--搜索-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sousuo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="搜索"
                android:textColor="#000000" />

        </LinearLayout>
    </LinearLayout>
    <!--最近搜索-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="最近搜索" />
    <!--最近搜索信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="奶粉" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="" />
    </LinearLayout>
    <!--热门搜索-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="15dp"
        android:text="热门搜索" />
    <!--热门搜索信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="好孩子" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="可么多么" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="贝亲" />
    </LinearLayout>
    <!--热门搜索信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="童书" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="奥迪双钻" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="玩具" />
    </LinearLayout>
    <!--热门搜索信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="奶瓶" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="花王" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="好奇" />
    </LinearLayout>
    <!--热门搜索信息-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="纸尿裤" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="雀巢超级能恩" />

        <TextView
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:text="" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f2f2f2"
            android:gravity="center"
            android:padding="5dp"
            android:text="奶粉" />
    </LinearLayout>

</LinearLayout>
