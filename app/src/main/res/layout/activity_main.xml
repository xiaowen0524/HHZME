<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">

    <hhzmy.bwei.com.hhzme.zidingyi.ViewPagerDemo
        android:layout_weight="1"
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></hhzmy.bwei.com.hhzme.zidingyi.ViewPagerDemo>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#666"
        android:layout_height="0.01dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mainImage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/tab_home_pressed" />

        <ImageView
            android:id="@+id/mainImage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/tab_class_normal" />

        <ImageView
            android:id="@+id/mainImage3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/tab_shopping_normal" />

        <ImageView
            android:id="@+id/mainImage4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@mipmap/tab_myebuy_normal" />

    </LinearLayout>
</LinearLayout>
